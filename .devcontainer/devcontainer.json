{
  "name": "runner-images",
  "image": "ghcr.io/sebatec-eu/base-devcontainer:1",
  "features": {
    "./setup-forgejo-runner": {},
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": "podman-docker"
    }
